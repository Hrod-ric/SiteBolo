    <div style="padding-left: 20%; padding-right: 20%;  padding-top: 5%; padding-bottom: 2%; color: black; background-color: white">
        <h1>Lista de Pedidos</h1>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModalCadastrar">Novo Bolo</button>

        <div style="padding-top: 10px;">
            <table class="table table-striped" style="text-align: center;">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Sabor</th>
                        <th>Tamanho</th>
                        <th>Valor</th>
                        <th>Editar</th>
                        <th>Deletar</th>
                    </tr>
                </thead>
                <%
                    for(var i = 0; i < bolo.length ; i++){
                %>
                        <tr>
                            <td><%=bolo[i].ID%></td>
                            <td><%=bolo[i].NOME%></td>
                            <td><%=bolo[i].SABOR%></td>
                            <td><%=bolo[i].TAMANHO%></td>
                            <td>R$ <%=bolo[i].VALOR%></td>
                            <td>
                                <button type="button" class="btn btn-secondary" 
                                    data-toggle="modal" data-target="#myModalEditar"
                                    data-id="<%=bolo[i].ID%>"
                                    data-nome="<%=bolo[i].NOME%>"
                                    data-sabor="<%=bolo[i].SABOR%>"
                                    data-tamanho="<%=bolo[i].TAMANHO%>"
                                    data-valor="<%=bolo[i].VALOR%>">
                                    Editar
                                </button>
                            </td>
                            <td>
                                <button type="button" class="btn btn-danger" 
                                    data-toggle="modal" data-target="#myModalDeletar"
                                    data-id="<%=bolo[i].ID%>"
                                    data-nome="<%=bolo[i].NOME%>">
                                    Deletar
                                </button>
                            </td>
                        </tr>
                <%
                    }
                %>
            </table>
        </div>
    </div>

    <!---->

    <div style="padding-left: 20%; padding-right: 20%;  padding-top: 5%; padding-bottom: 2%; color: black; background-color: white">
        <h1>Catalogo</h1>
