                        <th>Tamanho</th>
                        <th>Valor</th>
                        <th>Editar</th>
                        <th>Deletar</th>
                    </tr>
                </thead>
                <%
                    for(var i = 0; i < catalogo.length ; i++){
                %>
                        <tr>
                            <td><%=catalogo[i].ID%></td>
                            <td><%=catalogo[i].NOME%></td>
                            <td><%=catalogo[i].TAMANHO%></td>
                            <td>R$ <%=catalogo[i].VALOR%></td>
                            <td>
                                <button type="button" class="btn btn-secondary" 
                                    data-toggle="modal" data-target="#myModalEditarC"
                                    data-id="<%=catalogo[i].ID%>"
