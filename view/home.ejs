                </div>
                  <button type="submit" class="btn btn-primary">Entrar em contato!</button>
                </form>
          </div>
  
          <!-- Modal footer -->
          <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
          </div>

